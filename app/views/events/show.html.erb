<div class="container">
	<a href="/events/attend/<%= @id %>"><button type="button" class="btn btn-primary btn-lg btn-block">ツイッターと連携して参加表明</button></a>
</div>
<hr>
<div class="container">
	<h2>参加者一覧</h2>
	<hr>
	<% if @event.attends %>
	<% @event.attends.each do | attend | %>
	<div class="row attend_otaku col-xs-12 col-md-7 col-sm-7">
		<a href="/gachimate/show/<%= attend.user.id %>">
			<%= image_tag(get_prof_image_user_path(attend.user.id), :class => "pull-left") %>
			<p class="attend_otaku_name"><%= attend.user.name %></p>
			<p class="attend_otaku_attribute">
				<span class="label label-default">
					<%= attend.user.favorite %>推し
				</span>
				<% if attend.user.labels %>
					<% attend.user.labels.each do | label | %>
						<span class="label label-warning"><%= label.name %></span>
					<% end %>
				<% end %>
			<p>
		</a>
	</div>
	<% end %>
	<% end %>
</div>
<hr>
<div class="container">
	<button type="button" class="btn btn-primary btn-lg btn-block">ツイッターと連携して参加表明</button>
